{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "backend/api/scores.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/scores",
      "dest": "/backend/api/scores.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
